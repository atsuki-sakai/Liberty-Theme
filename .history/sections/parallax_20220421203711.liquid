    "name": "Parallax Slider",
    "settings": [
        {
            "type": "text",
            "id": "title_1",
            "default": "Title 1",
            "label": "First Title"
        },
        {
            "type": "text",
            "id": "title_2",
            "default": "Title 2",
            "label": "Second Title"
        },
        {
            "type": "text",
            "id": "title_3",
            "default": "Title 3",
            "label": "Third Title"
        },
        {
            "type": "text",
            "id": "subtitle_1",
            "default": "subtitle 1",
            "label": "First subtitle"
        },
        {
            "type": "text",
            "id": "subtitle_2",
            "default": "subtitle 2",
            "label": "Second subtitle"
        },
        {
            "type": "text",
            "id": "subtitle_3",
            "default": "subtitle 3",
            "label": "Third subtitle"
        },
        {
            "type": "text",
            "id": "description_1",
            "default": "description 1",
            "label": "First description"
        },
        {
            "type": "text",
            "id": "description_2",
            "default": "description 2",
            "label": "Second description"
        },
        {
            "type": "text",
            "id": "description_3",
            "default": "description 3",
            "label": "Third description"
        }
    ],
    "presets": [
        {
            "name": "parallax Slider"
        }
    ]
}
{% endschema %}