<div class="h-full flex items-start justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- REGISTER FORM -->
        <div>
            <h1 class="text-center text-2xl md:text-3xl font-bold font-noto_serif_jp_bold mt-6">パスワードをリセットする</h1>
            <div class="mt-8">
                {% form 'reset_customer_password' %}
                    {% if form.errors %}
                        <div class="relative border-2 border-red-700 bg-red-200 px-4 py-3" role="alert">
                            <strong class="font-bold">Error!!</strong>
                            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                        </div>
                    {% endif %}
                    <div class="my-2">
                        <label for="password" class="text-xs md:text-sm text-gray-500">パスワード</label>
                        <input
                            type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="new-password"
                            class="relative block w-full px-3 py-1.5 border focus:outline-none"
                            placeholder="パスワード"
                        >
                    </div>
                    <div class="my-2">
                        <label for="password_confirmation" class="text-xs md:text-sm text-gray-500">パスワード再確認</label>
                        <input
                            type="password"
                            name="customer[password_confirmation]"
                            id="password_confirmation"
                            autocomplete="new-password"
                            class="relative block w-full px-3 py-2 border focus:outline-none"
                            placeholder="パスワード再確認"
                        >
                    </div>
                    <div>
                        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:gray-900">
                            パスワードをリセットする
                        </button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</div>
