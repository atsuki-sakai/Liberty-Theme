<!-- PRODUCT CARD -->
<div class="w-full py-6 px-3 z-0">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- PRODUCT IMAGE -->
        <a href="{{ product.url }}">
            {% if product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transfrom ease-out duration-500 scale-100 hover:scale-105"
                        src="{{ product.featured_image | img_url: 'large' }}"
                        alt="{{ product.featured_image.alt }}">
                </div>
            {% else %}
                {% assign placeholder_img = "product-1" %}
                <div class="h-80 overflow-hidden">
                    {{ placeholder_img | placeholder_svg_tag: "w-full h-full object-cover bg-gray-400"}}
                </div>
            {% endif %}
        </a>
        <!-- DESCRIPTION -->
        <div class="flex flex-col p-4">
            <span class="text-sm">{{ product.vendor }}</span>
            <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
            <p class="text-gray-500">{{ product.price | money }}</p>
        </div>
    </div>
</div>