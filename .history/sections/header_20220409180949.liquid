    .header-bg {
        background: {{settings.header_bg_color}}
    }
</style>

{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type":"text",
            "id":"mobile-menu-title",
            "default":"Menu",
            "label":"Mobile Menu Title"
        },
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "Header Naigation Menu"
        }
    ]
}
{% endschema %}

