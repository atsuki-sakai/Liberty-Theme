<div class="flex justify-center">
    <div class="relative">
        <h1 class="text-2xl text-gray-900 font-bold">{{ section.settings.title }}</h1>
        <p class="text-base text-gray-700 font-thin">{{ section.settings.subtext_title }}</p>
        {% if section.settings.show_banner %}
            <div class="flex justify-center">
                <div class="fixed bottom-0">
                    <div class="bg-red-500 rounded-lg mb-6">
                        <p class="ml-4 text-base hover:text-gray-300 text-gray-500">
                            <a href="{{ section.settings.banner_link }}">{{ section.settings.banner_text }}</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

