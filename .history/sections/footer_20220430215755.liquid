<style lang="scss" scoped>
    #footer-bg {
        background-color: {{ settings.color_footer_bg }};
    }
    #footer-under-bg {
        background-color: {{ settings.color_footer_under_bg }};
    }
</style>

{% liquid
    if section.settings.menu.links == blank
        assign footer_menu_links = linklists[section.settings.menu].links
    else
        assign footer_menu_links = section.settings.menu.links
    endif
%}

{% liquid
    if section.settings.menu.links == blank
        assign footer_menu2_links = linklists[section.settings.menu2].links
    else
        assign footer_menu2_links = section.settings.menu2.links
    endif
%}

{% liquid
    if section.settings.menu.links == blank
        assign footer_menu3_links = linklists[section.settings.menu3].links
    else
        assign footer_menu3_links = section.settings.menu3.links
    endif
%}

