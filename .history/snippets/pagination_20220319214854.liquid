{%- comment -%}受け取ったpaginationを使う{%- endcomment -%}

{% if pagination.pages > 0 %}
    <nav role="navigation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium" href="{{ pagination.previous.url }}">{{ pagination.previous.title }}</a>
        {% endif %}
        {% for part in pagination.parts %}
            {% if part.is_link %}
                <span class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</span>
            {% else %}
                {% if part.title == '…' %}
                    <span  class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-3 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</span>
                {% else %}
                    <span  class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-3 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</span>
                {% endif %}
            {% endif %}
        {% endfor %}
        {% if pagination.next %}
            <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium" href="{{ pagination.next.url }}">{{ pagination.next.title }}</a>
        {% endif %}
    </nav>
{% endif %}