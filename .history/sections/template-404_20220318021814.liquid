<div class="flex justify-center pt-24">
    <div class="relative p-4">
        <h1 class="text-xl text-gray-900 font-bold">{{ section.settings.title }}</h1>
        <p class="text-sm text-gray-700 font-thin">{{ section.settings.subtext_title }}</p>
        <div class="pt-12 flex justify-center">
            <div class="bg-green-500 hover:bg-green-700 rounded-md shadow-md ring-1 py-2 ring-blue-200 w-2/3">
                <a href="/" class="text-white text-sm">HOMEへ戻る</a></a>
            </div>
        </div>
        {% if section.settings.show_banner %}
            <div class="flex justify-center">
                <div class="fixed bottom-0">
                    <div class="bg-green-500 ring ring-green-200 shadow-lg rounded-lg mb-4 py-2 px-4">
                        {% if section.settings.banner_link %}
                            {% assign shop_url = shop.secure_url %}
                        {% else %}
                            {% assign shop_url = section.settings.banner_link %}
                        {% endif %}
                        <a class="text-base hover:text-gray-300 text-white" href="{{ shop_url }}">{{ section.settings.banner_text }}</a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

