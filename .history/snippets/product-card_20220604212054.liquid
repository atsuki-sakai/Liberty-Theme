<!-- PRODUCT CARD -->
<div class="w-full py-6 px-3">
    <div class="bg-white  overflow-hidden">
        <!-- PRODUCT IMAGE -->
        <div class="relative">
            <a href="{{ product.url }}">
                {% if product.featured_image %}
                    <div class="h-80 rounded-md overflow-hidden">
                        <img loading="lazy" class="w-full h-full object-cover rounded-md overflow-hidden transfrom ease-out duration-500 scale-100 hover:scale-105"
                            src="{{ product.featured_image | img_url: 'large' }}"
                            alt="{{ product.featured_image.alt }}"
                            height="{{ product.featured_image.height }}"
                            width="{{ product.featured_image.width }}"
                        >
                    </div>
                {% else %}
                    {% assign placeholder_img = "product-1" %}
                    <div class="h-80 rounded-md overflow-hidden">
                        {{ placeholder_img | placeholder_svg_tag: "w-full rounded-md h-full object-cover bg-gray-400" }}
                    </div>
                {% endif %}
            </a>
            {% if selected_variant.price < selected_variant.compare_at_price %} 
                <div class="text-3xl text-red-500">
                    Sale
                </div>
            {% endif %}
        </div>
        <!-- DESCRIPTION -->
        <div class="flex flex-col p-4">
            <span class="text-xs md:text-sm font-montserrat_bold text-gray-500">{{ product.vendor }}</span>
            <a href="{{ product.url }}" class="text-black font-noto_serif_jp_bold">{{ product.title }}</a>
            <p class="text-gray-500 text-base md:text-lg">{{ product.price | money }}</p>
        </div>
    </div>
</div>