    <div class="absolute inset-0 z-0 bg-black bg-opacity-50">
    </div>
    <div class="absolute inset-0 translate-x-1/2 w-80 h-80 md:h-[400px] md:w-[400px] translate-y-1/2">
        <div class="absolute bg-green-500 -translate-x-1/4 -translate-y-1/4 w-80 h-80 md:h-[400px] md:w-[400px]">
            <h3 class="uppercase text-bold font-noto_serif_jp_bold text-4xl text-white">{{ section.settings.title }}</h3>
            <p class=" font-noto_serif_jp_bold text-2xl  flex-wrap text-white">{{ section.settings.description }}</p>
        </div>
    </div>
</div>
