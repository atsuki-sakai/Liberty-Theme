<div class="max-w-6xl mx-auto px-3">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="max-w-1/2 mx-auto p-2">
            <h4 class="text-3xl text-center text-gray-700 font-bold font-zen_maru_gothic">{{ section.settings.title }}
            </h4>
            <p class="text-lg text-center text-gray-500 font-bold font-zen_maru_gothic">{{ section.settings.textarea }}
            </p>
        </div>
        <div class="max-w-1/2 mx-auto p-2">
            <h3 class="text-gray-700 font-bold text-xl lg:text-3xl font-zen_maru_gothic p-1">{{ shop.name }}のファンになる</h3>
            {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p>{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
            <div class="flex">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input class="border rounded-md px-2 focus:outline-none" type="email"
                    value="{% if customer %}{{ customer.email }}{% endif %}"
                    placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" id="Email"
                    aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off"
                    autocapitalize="off">
                <div
                    class="bg-black text-white rounded-md ml-4 py-3 px-2 mt-4 shadow-md cursor-pointer border-3 border-gray-500 hover:bg-white hover:shadow-inner hover:shadow-gray-700 hover:text-black hover:border-black transform ease-in-out duration-300">
                    <input class="font-zen_maru_gothic cursor-pointer" type="submit" name="subscribe" id="subscribe"
                        value="{{ 'general.newsletter_form.submit' | t }}">
                </div>
            </div>
            {% endif %}
            {% endform %}
        </div>
    </div>
</div>

{% schema %}
{
"name": "Newsletter Form",
"settings": [
{
"type":"text",
"id":"title",
"default": "Default Title",
"label": "Newsletter Title"
},
{
"type":"textarea",
"id":"textarea",
"default": "Default Textarea",
"label": "Newsletter Textarea"
}
],
"presets": [
{
"name": "Newsletter Form"
}
]
}
{% endschema %}