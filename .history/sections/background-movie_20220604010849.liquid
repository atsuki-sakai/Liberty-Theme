<div class ="relative h-[550px] md:h-[900px] xl:h-[860px] w-full -z-10">
    <video class="overflow-hidden absolute inset-0 -z-10 object-cover h-[550px] md:h-[900px] xl:h-[860px] w-full" id="video" poster={{ section.settigns.image_url }} webkit-playsinline playsinline muted autoplay loop>
    <source src={{ section.settings.movie_url }} type="video/mp4">
