<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h1 class="text-xl font-bold text-gray-700">Account</h1>
    <div class="block md:flex gap-4">
        {% assign number_of_orders = customer.orders | size %}
        {% if number_of_orders > 0 %}
        <div class="w-full my-6 md:my-12">
            <h2 class="text-xl font-bold text-gray-700">Order History</h2>
            {% paginate customer.orders by 1 %}
            <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
                {% for order in customer.orders %}
                <div class="relative border rounded-md">
                    <div class="h-80 bg-gray-200 overflow-hidden rounded-tr rounded-tl">
                        {% if order.line_items.first.image %}
                        <img class="w-full h-full object-cover transition duration-1000 ease-in-out transform hover:scale-105"
                            src="{{ order.line_items.first.image | img_url: " medium" }}"
                            alt="{{ order.line_items.first.image.alt }}">
                        {% else %}
                        {{ "product-1" | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                        {% endif %}
                    </div>
                    <div class="mt-4 flex items-start justify-between p-2">
                        <div>
                            <h5 class="text-sm text-gray-500 ">{{ order.name | link_to: order.customer_url }}</h5>
                            <p class="mt-1 text-sm text-indigo-700">{{ order.financial_status_label }}</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-medium text-white bg-gray-700 text-center rounded-full px-3 py-1">{{
                                order.fulfillment_status_label }}</p>
                            <p class="text-sm">{{ order.subtotal_price | money }} + 送料{{ order.shipping_price | money }}
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="max-w-6xl mx-auto">
                <!-- {% render "pagination", pagination: paginate %} -->
                {% if paginate.pages > 0 %}
                <nav role="navigation" class="flex justify-center my-8">
                    {% if paginate.previous %}
                    <a class="transform duration-300 ease-in-out border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium"
                        href="{{ paginate.previous.url }}">{{ paginate.previous.title }}</a>
                    {% endif %}
                    {% for part in paginate.parts %}
                    {% if part.is_link %}
                    <a href="{{ part.url }}"
                        class="transform duration-300 ease-in-out border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-3 mx-1 rounded-sm font-medium">{{
                        part.title }}</a>
                    {% else %}
                    {% if part.title == '…' %}
                    <a href="{{ part.url }}"
                        class="transform duration-300 ease-in-out border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-3 mx-1 rounded-sm font-medium">{{
                        part.title }}</a>
                    {% else %}
                    <a href="{{ part.url }}"
                        class="transform duration-300 ease-in-out border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-3 mx-1 rounded-sm font-medium">{{
                        part.title }}</a>
                    {% endif %}
                    {% endif %}
                    {% endfor %}
                    {% if paginate.next %}
                    <a class="transform duration-300 ease-in-out border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium"
                        href="{{ paginate.next.url }}">{{ paginate.next.title }}</a>
                    {% endif %}
                </nav>
                {% endif %}
            </div>
            {% endpaginate %}
        </div>
        {% else %}
        <div class="w-full h-80 flex items-center justify-center">
            <h2 class="text-base md:text-2xl font-medium">You currently don't have any orders...</h2>
        </div>
        {% endif %}
    </div>
</div>