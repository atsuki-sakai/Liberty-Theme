<div class="flex flex-col items-center my-8">
    {% form 'contact' %}
        <div class="max-w-6xl mx-auto justify-center flex items-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
                    <input class="border px-2 mb-3 text-gray-700 w-full focus:outline-none" type="text" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
                    <input class="border px-2 mb-3 text-gray-700 w-full focus:outline-none" type="email" name="contact[email]" id="contact_email">
                </div>
            </div>
        </div>
        <div class="max-w-6xl mx-auto justify-center items-center flex px-4">
            <div class="flex flex-col w-full px-4">
                <label class="text-xs text-gray-500 uppercase" for="contact_message">Message</label>
                <textarea class="border px-2 resize-none focus:outline-none" name="contact[body]" id="contact_message" rows="7"></textarea>
            </div>
        </div>
        <div class="max-w-6xl mx-auto justify-center items-center flex px-4">
            <div class="px-3 w-full">
                <button type="submit" class="border-2 w-full h-12 bg-gray-700 text-white text-lg hover:bg-white hover:text-gray-700">
                    送信
                </button>
            </div>
        </div>

    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "presets": [
        {
            "name": "Contact Form"
        }
    ]
}
{% endschema %}