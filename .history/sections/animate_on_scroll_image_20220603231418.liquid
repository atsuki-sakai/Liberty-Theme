<div class="px-8 py-12 md:py-24 bg-gray-100">
    <div class="max-w-5xl mx-auto">
        <h2 class="text-left font-montserrat_bold text-2xl md:text-4xl">{{ section.settings.title }}</h2>
        <p class="text-left  text-sm md:text-2xl text-gray-500 mb-3 md:mb-6">{{ section.settings.description }}</p>
        {% for block in section.blocks %}
            <div class='flex w-full mb-4 md:mb-8 {% if block.settings.switch %}flex-row-reverse{% endif %} items-center'>
                <div class="w-1/2 m-2 md:m-4">
                    <div data-aos="fade-up">
                        <div class="p-2 md:p-5">
                            <p class="text-left font-noto_sans_jp_bold text-base md:text-3xl">{{ block.settings.title }}</p>
                            <p class="text-left font-noto_sans_jp md:text-2xl text-gray-500">{{ block.settings.description }}</p>
                        </div>
                    </div>
                </div>
                <div class="w-1/2">
                        <div data-aos="fade-up">
                            <div class="w-full h-[160px] md:h-[400px]">
                                <img
                                    loading="lazy"
                                    class="object-cover object-center w-full h-[160px] md:h-[400px] rounded-md shadow-md overflow-hidden"
                                    src="{{ block.settings.image_picker | img_url: 'large' }}"
                                    alt="{{ block.settings.image_picker.alt }}"
                                    height="{{ block.settings.image_picker.height }}"
                                    width="{{ block.settings.image_picker.width }}"
                                >
                            </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        AOS.init();
    });
</script>

{% schema %}
{
    "name": "Animate on scroll image",
    "settings": [
        {
            "type": "text",
            "id":"title",
            "default":"Title",
            "label":"Title"
        },
        {
            "type": "textarea",
            "id":"description",
            "default":"Description",
            "label":"Description"
        }
    ],
    "blocks": [
        {
            "type": "image_picker",
            "name": "Slide Image",
            "limit": 5,
            "settings": [
                {
                    "type": "checkbox",
                    "id":"switch",
                    "default": false,
                    "label": "Switch Position"
                },
                {
                    "type": "image_picker",
                    "id": "image_picker",
                    "label": "Slide Image"
                },
                {
                    "type":"text",
                    "id":"title",
                    "default": "Title",
                    "label": "Title"
                },
                {
                    "type":"textarea",
                    "id":"description",
                    "default": "Description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Animate on scroll image"
        }
    ]
}
{% endschema %}