    </div>
    <div class="mx-6 py-4 text-center md:text-left px-8">
        <div class="grid grid-1 md:grid-cols-2 lg:grid-cols-3 gap-y-6">
            {% if section.settings.show_Textarea %}
                <div class="">
                    <h6
                        class="uppercase text font-bold font-orelega_one mb-4 flex items-center justify-center md:justify-start">
                        <div class="mr-2 ml-4">{{ shop.name }}</div>
                    </h6>
                    <div class="my-3 font-semibold ml-4 text-base text-gray-800 font-zen_maru_gothic">
                        {{ section.settings.text }}</div>
                    <p class="text-left font-light ml-4 text-gray-500 font-zen_maru_gothic">
                        {{ section.settings.textarea }}
                    </p>
                </div>
            {% endif %}
            <div class="flex flex-col space-y-2">
                <h3 class="font-orelega_one font-bold uppercase mb-3">{{ section.settings.menu_text }}</h3>
                {% for link in footer_menu_links %}
                    <!-- MENU LINK -->
                    <!-- リンクリストは表示させていない。 -->
                    {% if link.links == blank %}
                        <a href="{{ link.url }}" class="font-zen_maru_gothic mb-1 text-base text-gray-600 hover:text-gray-400">{{ link.title }}</a>
                    {% endif %}
                 {% endfor %}
            </div>
            <div class="flex flex-col space-y-2">
                <h3 class="font-orelega_one font-bold uppercase mb-3">{{ section.settings.menu2_text }}</h3>
                {% for link2 in footer_menu2_links %}
                    <!-- MENU LINK -->
                    <!-- リンクリストは表示させていない。 -->
                    {% if link2.links == blank %}
                        <a href="{{ link2.url }}" class="font-zen_maru_gothic mb-1 text-base text-gray-600 hover:text-gray-400">{{ link2.title }}</a>
                    {% endif %}
                {% endfor %}
            </div>
            {% unless section.settings.show_Textarea %}
                <div class="flex flex-col space-y-2">
                    <h3 class="font-orelega_one font-bold uppercase mb-3">{{ section.settings.menu3_text }}</h3>
                    {% for link3 in footer_menu3_links %}
                        <!-- MENU LINK -->
                        <!-- リンクリストは表示させていない。 -->
                        {% if link3.links == blank %}
                            <a href="{{ link3.url }}" class="font-zen_maru_gothic mb-1 text-base text-gray-600 hover:text-gray-400">{{ link3.title }}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endunless %}
        </div>
    </div>
    <div id="footer-under-bg" class="md:flex w-full text-center py-6 px-12 justify-between text-white">
        <div class="flex my-3 items-center justify-center w-full">
            <a href="/" class="text-sm font-oswald">© 2022 Copyright : {{ shop.name }}</a>
        </div>
        <div class="flex my-3 justify-center items-center w-full">
            {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'mr-2' }}
            {% endfor %}
        </div>
    </div>
</footer>

{% schema %}
    {
        "name": "Footer",
        "settings": [
            {
                "type": "checkbox",
                "id": "show_Textarea",
                "default": true,
                "label": {
                    "en": "Show Textarea",
                    "ja": "テキストエリアを表示"
                }
            },
            {
                "type": "text",
                "id": "text",
                "default": "title",
                "label": {
                    "en": "Footer Textare Title",
                    "ja": "フッターテキストエリア タイトル"
                }
            },
            {
                "type": "textarea",
                "id": "textarea",
                "default": "Footer Textarea...",
                "label": {
                    "en": "Footer Textare",
                    "ja": "フッターテキストエリア"
                }
            },
            {
                "type": "text",
                "id": "menu_text",
                "default": "menu text",
                "label": {
                    "en": "Footer Menu Title",
                    "ja": "フッターメニュー タイトル"
                }
            },
            {
                "type": "text",
                "id": "menu2_text",
                "default": "menu2 text",
                "label": {
                    "en": "Footer Menu Title2",
                    "ja": "フッターメニュー タイトル2"
                }
            },
            {
                "type": "text",
                "id": "menu3_text",
                "default": "menu3 text",
                "label": {
                    "en": "Footer Menu Title3",
                    "ja": "フッターメニュー タイトル3"
                }
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": {
                    "en": "Footer Naigation Menu",
                    "ja": "フッターナビゲーション　メニュー"
                }
            },
            {
                "type": "link_list",
                "id": "menu2",
                "label": {
                    "en": "Footer Naigation Menu2",
                    "ja": "フッターナビゲーション　メニュー２"
                }
            },
            {
                "type": "link_list",
                "id": "menu3",
                "label": {
                    "en": "Footer Naigation Menu3 *Please make the text area emergency to display*",
                    "ja": "フッターナビゲーション　メニュー3 *表示するためにはテキストエリアを非常時にしてください*"
                }
            }
        ]
    }
{% endschema %}