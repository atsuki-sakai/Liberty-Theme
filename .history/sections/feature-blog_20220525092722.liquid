<div class="mx-8 my-6 ">
    <div class="max-w-5xl mx-auto">
        <h3 class="text-center font-bold">BLOG</h3>
        {% for article in section.settings.blog.articles limit: section.settings.post_limit %} 
            <p>{{ article.title }}</p>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Feature Blog",
    "settings": [
        {
            "type": "blog",
            "id": "blog",
            "label": "ブログ記事"
        }
    ],
    "settings": [
        {
            "type": "range",
            "id": "post_limit",
            "min": 2,
            "max": 4,
            "step": 1,
            "default": 3,
            "label": "表示ブログ数"
        }
    ],
    "presets": [
        {
            "name": "Feature Blog"
        }
    ]
}
{% endschema %}