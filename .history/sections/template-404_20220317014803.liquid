<div class="flex justify-center">
    <div class="relative">
        <h1 class="text-2xl text-gray-900 font-bold">{{ section.settings.title }}</h1>
        <p class="text-base text-gray-500 font-thin">{{ section.settings.subtext_title }}</p>
        {% if section.settings.show_coupon %}
            <div class="fixed bottom-0 right-0">
                <p>Hello World</p>
            </div>
        {% endif %}
    </div>
</div>

<!-- en.default.jsonのgeneral.404.subtext_htmlに呼び出す事ができる -->
