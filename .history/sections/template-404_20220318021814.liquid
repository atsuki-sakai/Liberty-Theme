{% schema %}
{
    "name":"Template 404",
    "tag":"section",
    "class": "flex justify-center text-center py-7 h-screen",
    "settings": [
        {
            "type":"text",
            "id":"title",
            "default":"404 エラー",
            "label":"404 Heading Title"
        },
        {
            "type":"text",
            "id":"subtext_title",
            "default":"お探しのURLのページは見つかりませんでした...",
            "label":"404 Subtext Title"
        },
        {
            "type": "checkbox",
            "id": "show_banner",
            "default": true,
            "label": "Show Banner"
        },
        {
            "type":"text",
            "id":"banner_text",
            "default":"Banner Text",
            "label":"Banner Text"
        },
        {
            "type":"text",
            "id":"banner_link",
            "default":"https://google.com",
            "label":"Banner Link"
        }
    ]
}
{% endschema %}