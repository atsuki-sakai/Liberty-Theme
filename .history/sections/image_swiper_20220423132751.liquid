
<!-- swiper.js CDN -->
<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>

<style>
    .swiper-wrapper {
    /* wrapperのサイズを調整 */
    width: 100%;
    height: 100%;
    }

    .swiper-slide {
    /* スライドのサイズを調整、中身のテキスト配置調整、背景色 */
    color: #ffffff;
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 300px;
    }
    .swiper-button-prev,
    .swiper-button-next {
        color: #ffffff;
        top: 120 !important;
        height: 40px;
    }

    .swiper-button-prev::after,
    .swiper-button-next::after {
        font-size: 30px;
    }

    .swiper-pagination {
        color: #ffffff;
        bottom: 0 !important;
    }

    .swiper-pagination-bullet-active {
        background-color: #0077FF !important;
    }

    .product--information {
        height: fit-content;
    }
</style>

<div class="max-w-6xl mx-auto px-4 py-12">
    <div class="swiper rounded-md">
        <!-- 必要に応じたwrapper -->
        <div class="swiper-wrapper">
            {% for block in section.blocks limit: section.blocks.size %}
                <div class="swiper-slide ">
                    <div class="h-80 overflow-hidden flex justify-center items-center">
                        {% if block.settings.image_picker != blank %}
                        <div class="relative">
                            <img
                                src="{{ block.settings.image_picker | img_url: 'large' }}" 
                                alt="{{ block.settings.image_picker.alt }}" 
                                height="{{ block.settings.image_picker.height }}" 
                                width="{{ block.settings.image_picker.width }}"
                                class="w-full h-80 object-cover object-center"
                            >
                            <div class="absolute">
                                <p class="text-2xl absolute bottom-12 left-12">Hello</p>
                            </div>

                        </div>
                        {% else %}
                            {{ 'product-1' | placeholder_svg_tag: "w-full h-80 object-cover object-center" }}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</div>

<script>
    const swiper = new Swiper(".swiper", {
        spaceBetween: 30,
        centeredSlides: true,
        effect: "fade",
        autoplay: {
            delay: 4000,
            disableOnInteraction: false,
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
</script>


{% schema %}
{
    "name": "Image Swiper",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Title",
            "label": "Swiper Title"
        }
    ],
    "blocks": [
        {
            "type": "image_picker",
            "name": "Slide Image",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_picker",
                    "label": "Slide Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Swiper Title"
        }
    ]
}
{% endschema %}