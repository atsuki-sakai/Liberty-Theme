{%- comment -%}受け取ったpaginationを使う{%- endcomment -%}
{% if pagination.pages > 0 %}
    <nav role="navigation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a class="transform duration-300 ease-in-out px-8 py-3 mx-1 bg-black text-white border-yellow-300 border-2 ring-2 ring-black hover:text-black hover:bg-white  hover:border-black  hover:ring-yellow-300 " href="{{ pagination.previous.url }}">{{ pagination.previous.title }}</a>
        {% endif %}
        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}" class="transform duration-300 ease-in-out  px-4 py-3 mx-1 bg-black text-white border-yellow-300 border-2 ring-2 ring-black hover:text-black hover:bg-white  hover:border-black  hover:ring-yellow-300">{{ part.title }}</a>
            {% else %}
                {% if part.title == '…' %}
                    <a href="{{ part.url }}" class="transform duration-300 ease-in-out  px-4 py-3 mx-1 bg-black text-white border-yellow-300 border-2 ring-2 ring-black hover:text-black hover:bg-white  hover:border-black  hover:ring-yellow-300">{{ part.title }}</a>
                {% else %}
                <a href="{{ part.url }}" class="transform duration-300 ease-in-out  px-4 py-3 mx-1 bg-black text-white border-yellow-300 border-2 ring-2 ring-black hover:text-black hover:bg-white  hover:border-black  hover:ring-yellow-300">{{ part.title }}</a>
                {% endif %}
            {% endif %}
        {% endfor %}
        {% if pagination.next %}
            <a class="transform duration-300 ease-in-out  px-8 py-3 mx-1 bg-black text-white border-yellow-300 border-2 ring-2 ring-black hover:text-black hover:bg-white  hover:border-black  hover:ring-yellow-300" href="{{ pagination.next.url }}">{{ pagination.next.title }}</a>
        {% endif %}
    </nav>
{% endif %}