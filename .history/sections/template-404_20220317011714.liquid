<div class="flex justify-center">
    <div>
        <h1 class="text-2xl text-gray-900 font-bold">{{ section.settings.title }}</h1>
        <p class="text-base text-gray-500 font-thin">{{ section.settings.subtext_title }}</p>
        <!-- <p class="text-base text-gray-500 font-thin">{{ "general.404.subtext_html" | t }}</p> -->
    </div>
</div>

{% schema %}
{
    "name":"Template 404",
    "settings": [
        {
            "type":"text",
            "id":"title",
            "default":"404 ERROR",
            "label":"404 Heading Title",
            "settings": [
                "show_label": true
            ]
        },
        {
            "type":"text",
            "id":"subtext_title",
            "default":"The page that your're looking for is not found...",
            "label":"404 Subtext Title"
        }
    ]
}
{% endschema %}