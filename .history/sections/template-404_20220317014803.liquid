{% schema %}
{
    "name":"Template 404",
    "tag":"section",
    "settings": [
        {
            "type":"text",
            "id":"title",
            "default":"404 ERROR",
            "label":"404 Heading Title"
        },
        {
            "type":"text",
            "id":"subtext_title",
            "default":"The page that your're looking for is not found...",
            "label":"404 Subtext Title"
        },
        {
            "type": "checkbox",
            "id": "show_coupon",
            "default": true,
            "label": "Show Subtext Title CheckBox"
        }
    ]
}
{% endschema %}